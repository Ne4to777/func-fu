{
    "compilerOptions": {
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "downlevelIteration": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "__tests__"
    ]
}
